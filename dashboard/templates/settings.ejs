                              message: '<%= messageId %>',
                              role: '<%= reactionrole.roleId %>',
                              emoji: '<%= reactionrole.emojiId %>',
                              type: '<%= reactionrole.type %>',
                              silent: '<%= reactionrole.silent %>'
                            })">
